{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "outDir": "dist/",
    "rootDir": "src/",
    "lib": ["es2016", "dom"],
    "sourceMap": true,
    "allowJs": false
  },
  "exclude": [
    "dist",
    "node_modules",
    "__test__",
    "scripts",
    "docs",
    "example"
  ]
}
